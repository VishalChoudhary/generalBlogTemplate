<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
      <label >Title</label>
      <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea name="postBody" class="form-control" cols="30" rows="5" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include("partials/footer") -%>